<Window x:Class="WPF_SimpleCalculator.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_SimpleCalculator"
        mc:Ignorable="d"
        Title="HelpWindow" Height="341.86" Width="600" Loaded="Window_Loaded">
    <Grid Background="#FFDBEDFF">
        <Label x:Name="lbl_HelpTitle" Content="Help" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Top" Height="50" Background="White" FontSize="20" FontWeight="Light" BorderThickness="0,1" ClipToBounds="True" BorderBrush="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="lbl_HelpText" Content="&#xD;&#xA;" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,65,0,75" FontSize="14" Padding="5,5,5,5"/>
        <Button x:Name="btn_Close" Content="Close" HorizontalAlignment="Center" Margin="0,220,0,0" Width="100" Background="#FF73A8FF" Height="50" FontSize="14" BorderThickness="2" BorderBrush="#FF4286F4" Foreground="White" Click="btn_Close_Click"/>
    </Grid>
</Window>
